<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cotrollers.Front">
   <children>
      <VBox alignment="CENTER" layoutX="100.0" prefHeight="700.0" prefWidth="1000.0" spacing="10" stylesheets="Front.css">
          <children>
              <!-- Ajout d'un titre -->
              <Label styleClass="Titre" text="Explorez les rendez-vous" />
              <!-- Ajout d'un lien pour ajouter un don -->
              <Hyperlink fx:id="addRendezvous" styleClass="hyperlink" text="Ajouter rendez-vous" />
              <Button fx:id="chatbotButton" onAction="#chatbot" text="Chatbot" />
              <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" styleClass="scroll-pane">
                  <content>
                      <TilePane fx:id="cardsContainer" hgap="10" prefColumns="4" styleClass="tile-pane" vgap="10">
                          <padding>
                              <Insets bottom="10" left="10" right="10" top="10" />
                          </padding>
                          <!-- Les cartes seront ajoutÃ©es ici dynamiquement -->
                          <HBox spacing="10">
                              <!-- Contenu de la carte -->
                              <VBox spacing="5">

                        </VBox>
                          </HBox>
                      </TilePane>
                  </content>
              </ScrollPane>
          </children>
      </VBox>
      <Pane layoutX="-6.0" prefHeight="691.0" prefWidth="110.0">
         <children>
            <Button contentDisplay="TOP" layoutY="115.0" mnemonicParsing="false" onAction="#handleNavigation" onMouseClicked="#handleNavigation" prefHeight="90.0" prefWidth="110.0" styleClass="button3" stylesheets="@guiadmin.css" text="Naviguer" textFill="#767676">
               <graphic>
                  <ImageView fitHeight="46.0" fitWidth="63.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@assets/icons8-home-64.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
