<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="1100.0" spacing="10" stylesheets="DonView.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.DonFront">
    <children>
        <!-- Ajout d'un titre -->
        <Label styleClass="Titre" text="Explorez les dons" />
        <!-- Ajout d'un lien pour ajouter un don -->
        <Hyperlink fx:id="addDonLink" styleClass="hyperlink" text="Ajouter Don" />
        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" styleClass="scroll-pane">
            <content>
                <TilePane fx:id="cardsContainer" hgap="10" prefColumns="4" styleClass="tile-pane" vgap="10">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <!-- Les cartes seront ajoutÃ©es ici dynamiquement -->
                </TilePane>
            </content>
        </ScrollPane>
    </children>
</VBox>